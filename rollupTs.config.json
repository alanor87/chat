{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist/public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/public/**/*"]
}
